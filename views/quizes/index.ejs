<div class="panel panel-default">
    <div class="panel-heading">
        <form role="form" class="form-inline" method="get" action="/quizes">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar una pregunta" name="search">
                <span class="input-group-btn">
                    <button typeof="submit" class="btn btn-default">
                        Buscar
                    </button>
                </span>
            </div>
        </form>
    </div>

    <div class="panel-body">
        <table class="table table-hover table-condensed">
            <% var i; for(i = 0; i < quizes.length; i++) { %>
            <tr>
                <td>
                    <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
                    <span class="label label-default"><%= quizes[i].tema %></span>
                </td>
                <td>
                    <a href="quizes/<%= quizes[i].id %>/edit">
                        <button type="button" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-edit"></span>
                        </button>
                    </a>
                </td>
                <td>
                    <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
                        <button type="submit" class="btn  btn-danger btn-sm"
                                onclick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </form>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
    <div class="panel-footer"><a href="quizes/new">
            <button type="button" class="btn btn-primary">Crear Pregunta</button>
        </a></div>
</div>